<main class="main">
    <header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav__left">
            <%= link_to image_tag("logo2.png", class: :logo), root_path %>
          </div>
<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.nickname}の情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.nickname %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@user.nickname}さんの投稿"%>
      </h2>
    <div class="user__card">
      <% @ideas.each do |idea|%>
      <div class="card">
        <%= link_to Category.find(idea.category_id).name, root_path, class: :card__img %>
          <div class="card__body">
            <%= link_to idea.title, idea_path(idea), class: :card__title%>
          </div>
          </div>
      <% end %>
      </div>
    </div>
  </div>
</div>