<main class="main">
    <header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav__left">
            <%= link_to image_tag("logo2.png", class: :logo), root_path %>
          </div>
<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">アイデアのタイトル</p>
          <p class="detail__message">
            <%= @idea.title %>
          </p>
        </div>
      <%= link_to "by #{@idea.user.nickname}", root_path, class: :prototype__user %>
        <div class="prototype__detail">
          <p class="detail__title">アイデアの詳細</p>
          <p class="detail__message">
            <%= @idea.subject %>
          </p>
        </div>
          <% if @idea.image.attached? %>
      <div class="prototype__image">
        <%= image_tag @idea.image, class: "detail__image" %>
      </div>
    <% end %>
  </div>
      </div>
      <div class="prototype__comments">
       <%if user_signed_in? %>
          <%= form_with model: [@idea, @comment], local: true do |f|%>
            <div class="field">
              <%= f.label :content, "コメント" %><br />
              <%= f.text_field :content, id:"comment_content" %>
            </div>
            <div class="actions">
              <%= f.submit "送信する", class: :form__btn  %>
            </div>
          <% end %>
        <% end %>
        <ul class="comments_lists">
        <% @comments.each do |comment| %>
            <li class="comments_list">
              <%= comment.content %>
              <%= link_to "(#{comment.user.nickname}）", user_path(comment.user), class: :comment_user %>
            </li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
</main>
